<?xml version="1.0"?>
<launch>
  <arg name="robot_name" default="seyyah" />

  <group ns="$(arg robot_name)">
    <node pkg="rosserial_python" type="serial_node.py"
      name="rosserial_python" args="/dev/ttyACM0" />

    <node pkg="ika_odometry" type="ika_odom_publisher"
      args="$(arg robot_name)" name="odom_publisher" />

  </group>

</launch>
